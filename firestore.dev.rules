rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ============================================
    // 開発環境用ルール
    // ============================================
    // 警告: このルールは開発環境専用です
    // 本番環境では firestore.rules を使用してください
    
    match /{document=**} {
      // 認証済みユーザーなら全てのデータにアクセス可能
      allow read, write: if request.auth != null;
    }
  }
}

